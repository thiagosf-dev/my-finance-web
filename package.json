{
  "name": "financeiro-web",
  "version": "0.1.0",
  "private": true,
  "description": "Aplicação web de controle financeiro construída com React, Vite, TypeScript e Biome.",
  "type": "module",
  "license": "MIT",
  "author": "Thiago Silva <seu-email-aqui>",
  "keywords": [
    "financeiro",
    "my-finance",
    "react",
    "vite",
    "typescript",
    "biome",
    "web-app"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thiagosf-dev/my-finance-web.git"
  },
  "bugs": {
    "url": "https://github.com/thiagosf-dev/my-finance-web/issues"
  },
  "homepage": "https://github.com/thiagosf-dev/my-finance-web#readme",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format .",
    "typecheck": "tsc -b",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "check": "npm run typecheck && npm run lint",
    "verify": "npm run check && npm run test",
    "lint-staged": "lint-staged",
    "prepare": "husky install",
    "commit": "cz",
    "commitlint": "commitlint --edit $HUSKY_GIT_PARAMS",
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,jsonc,css,scss,html,htm,md,mdx}": [
      "biome check --write --no-errors-on-unmatched"
    ]
  },
  "standard-version": {
    "skip": {
      "tag": false
    }
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.2.4",
    "@tailwindcss/vite": "^4.1.17",
    "@tanstack/react-query": "^5.90.10",
    "axios": "^1.13.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.554.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwind-merge": "^3.4.0",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.7",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react-swc": "^4.2.2",
    "autoprefixer": "^10.4.22",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^9.0.0",
    "jsdom": "^27.2.0",
    "lint-staged": "^15.0.0",
    "postcss": "^8.5.6",
    "standard-version": "^9.5.0",
    "tailwindcss": "^4.1.17",
    "tw-animate-css": "^1.4.0",
    "typescript": "~5.9.3",
    "vite": "^7.2.4",
    "vitest": "^4.0.12"
  }
}
